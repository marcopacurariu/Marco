@model WebApplication2.Models.Mine

@{
    ViewBag.Title = "Details";
}

@if (this.Model.Type == WebApplication2.Models.ResourceType.Clay)
{
    <img src="~/Content/img/mine-@(this.Model.Type).png">
    <p>Clay is produced here. By increasing its level, you increase the clay production.</p>
    <p> Current level: @(Model.Level) and production: @(Model.Level * 13);</p>
    <p> Next level: @(Model.Level + 1)and production: @((Model.Level + 1) * 13);</p>
}
else if (this.Model.Type == WebApplication2.Models.ResourceType.Wood)
{
    <img src="~/Content/img/mine-@(this.Model.Type).png">
    <p> The woodcutter cuts down trees in order to produce lumber. The further you extend the woodcutter, the more lumber is produced</p>    
    <p> Current level: @(Model.Level) and production: @(Model.Level*13);</p>
    <p> Next level: @(Model.Level + 1)and production: @((Model.Level+1)* 13);</p>
    

}
else if (this.Model.Type == WebApplication2.Models.ResourceType.Wheat)
{
    <img src="~/Content/img/mine-@(this.Model.Type).png">
    <p>
        Your population`s food is produced here. By increasing the farm`s level, you increase its crop production.
    </p>
    <p> Current level: @(Model.Level) and production: @(Model.Level * 13);</p>
    <p> Next level: @(Model.Level + 1)and production: @((Model.Level + 1) * 13);</p>

}
else if (this.Model.Type == WebApplication2.Models.ResourceType.Iron)
{
    <img src="~/Content/img/mine-@(this.Model.Type).png">
    <p>
        Here miners produce the precious resource of iron. By increasing the mine`s level, you increase the iron production.
        Add Comment
    </p>
    <p> Current level: @(Model.Level) and production: @(Model.Level * 13);</p>
    <p> Next level: @(Model.Level + 1)and production: @((Model.Level + 1) * 13);</p>
}

@using (Html.BeginForm("Upgrade","Mines"))
{
    @Html.HiddenFor(m=>m.MineID)
    <div> Do a fast upgrade?: @Html.CheckBox("fastUpgrade")</div>
    //<input name="mineID" value="10" type="hidden" />
    <button type="submit">Upgrade</button>
}